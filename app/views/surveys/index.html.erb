<div id="header">
  <h1>Surveys, Surveys, Surveys!</h1>
  <h2>Luxury Surveys at Discount Prices</h2>
</div>
<br>
<div id="userType">
  <h2>Are you a:</h2>
  <h2><span id="surveyAdmin">Survey Administrator</span></h2>
  <h2><span id="surveyTaker">Survey Taker</span></h2>
</div>

<% if @surveys.any? %>
  <ul>
    <% @surveys.each do |survey| %>
      <li><%= link_to survey.name, survey_path(survey) %></li>
    <% end %>
  </ul>
<% else %>
  <p>No surveys have been created yet!</p>
<% end %>

<p><%= link_to "Make a Survey", new_survey_path %></p>


